<table class="full-width bordered" style="border-bottom: 1px solid #eee; margin-bottom: 16px;">
  <% if (Array.isArray(products)) { %>
    <% for (const product of products) { %>
      <tr class="product-item">
        <td style="width: 160px; max-width: 50%">
          <a href="#" target="_blank">
            <div style="background: #eee; width: 160px; height: 112px; overflow: hidden; margin-right: 24px; border-radius: 4px;">
              <div style="background-image: url('<%= getMediaUrl(product?.featuredImage) %>'); width: 100%; height: 100%; background-position: center; background-size: cover;"></div>
            </div>
          </a>
        </td>
        <td>
          <div class="info">
            <a href="<%= getWebCustomerUrl(`/products/${product?.productId}`) %>" target="_blank" style="display: block;">
              <h4 style="font-size: 18px; margin-top: 0; margin-bottom: 8px; color: #841206;">
                <%= product?.name %>
              </h4>
            </a>
            <a href="<%= getWebCustomerUrl(`/products/${product?.productId}?review=true`) %>" target="_blank" style="display: flex;">
              <span style="padding: 4px 16px; color: #D4AA5F; font-size: 14px; border: 1px solid #D4AA5F; border-radius: 4px;">
                <%= trans('review.productItem.button') %>
              </span>
            </a>
          </div>
        </td>
      </tr>
    <% } %>
  <% } %>
</table>
