<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../_partials/header') %>
  <title>Tài khoản</title>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../_partials/sidebar'); %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../_partials/topbar'); %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <div id="profile">
                <div class="row">
                  <div class="col-12 col-md-3">
                    <div class="list-group">
                      <a href="/profile" class="list-group-item list-group-item-action">Thông tin tài khoản</a>
                      <a href="/profile/update" class="list-group-item list-group-item-action">Cập nhật thông tin</a>
                      <a href="/profile/update-password" class="list-group-item list-group-item-action active">Đổi mật khẩu</a>
                      <a href="/auth/logout" class="list-group-item list-group-item-action">Đăng xuất</a>
                    </div>
                  </div>
                  <div class="col-12 col-md-9">
                    <div class="col-md-6 border rounded" style="background-color: white;">
                      <form action="/profile/update-password" method="post">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Cập nhật mật khẩu</h4>
                            </div>

                            <% if (result === "INCORRECT_RE_PASSWORD") { %>
                              <div class="alert alert-danger">
                                Mật khẩu nhập lại không đúng
                              </div>
                            <% } %>

                            <% if (result === "INCORRECT_CURRENT_PASSWORD") { %>
                              <div class="alert alert-danger">
                                Mật khẩu hiện tại không chính xác
                              </div>
                            <% } %>

                            <% if (result === "SUCCESS") { %>
                              <div class="alert alert-success">
                                Đổi mật khẩu thành công
                              </div>
                            <% } %>

                            <div class="row mt-3">
                                <div class="col-md-12 mb-3">
                                  <label>Mật khẩu cũ</label>
                                  <input 
                                  type="password" 
                                  class="form-control" 
                                  value= ""
                                  name="currentPassword"
                                  id="currentPassword">
                                </div>
                                <div class="col-md-12 mb-3">
                                  <label>Mật khẩu mới</label>
                                  <input 
                                  type="password" 
                                  class="form-control" 
                                  value= ""
                                  name="newPassword" 
                                  id="newPassword">
                                </div>
                                <div class="col-md-12 mb-3">
                                  <label>Nhập lại mật khẩu</label>
                                  <input 
                                  type="password" 
                                  class="form-control" 
                                  value= ""
                                  name="reNewPassword" 
                                  id="reNewPassword">
                                </div>
                            </div>
                            <div class="mt-3 text-center"><button class="btn btn-primary profile-button" type="submit">Lưu thông tin</button></div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <%- include('../_partials/footer') %>

      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include('../_partials/scripts')%>

</body>

</html>