<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../_partials/header') %>
  <title>Cập nhật đơn hàng</title>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../_partials/sidebar'); %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../_partials/topbar'); %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <div id="profile">
                <div class="row">
                  <div class="col-12 col-md-3">
                  </div>

                  <div class="col-12 col-md-9">
                    <div class="col-md-6 border rounded" style="background-color: white;">
                      <form action="/order/update-status/<%= order._id %>" method="post">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                              <h4 class="text-right">Cập nhật đơn hàng</h4>
                            </div>

                            <div class="row mt-3">
                              <div class="col-md-12 mb-3">
                                <label>Trạng thái</label>

                                <select name="status" id="status">
                                  <option value="PENDING">Đang chờ xác nhận</option>
                                  <option value="PROCESSING">Đang xử lí</option>
                                  <option value="TRANSFERRING">Đang vận chuyển</option>
                                  <option value="DONE">Giao hàng và thanh toán thành công</option>
                                  <option value="REJECTED">Huỷ</option>
                                </select>
                              </div>

                              <div class="col-md-12 mb-3">
                                <label>Lí do từ chối</label>
                                <input type="text" class="form-control" name="reasonsForRejection" id="reasonsForRejection" >
                              </div>

                              <div class="col-md-12 mb-3">
                                <input type="checkbox" id="pushNotification" name="pushNotification" checked>
                                <label for="pushNotification"> Push Notification</label><br>
                              </div>
                            </div>

                            <div class="mt-3 text-center">
                              <button class="btn btn-primary profile-button" type="submit">Cập nhật</button>
                            </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <%- include('../_partials/footer') %>

      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include('../_partials/scripts')%>

</body>

</html>