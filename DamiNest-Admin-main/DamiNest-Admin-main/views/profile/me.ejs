<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../_partials/header') %>
  <title>Tài khoản</title>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../_partials/sidebar'); %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../_partials/topbar'); %>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <div id="profile">
                <div class="row">
                  <div class="col-12 col-md-3">
                    <div class="list-group">
                      <a href="/profile" class="list-group-item list-group-item-action active">Thông tin tài khoản</a>
                      <a href="/profile/update" class="list-group-item list-group-item-action">Cập nhật thông tin</a>
                      <a href="/profile/update-password" class="list-group-item list-group-item-action">Đổi mật khẩu</a>
                      <a href="/auth/logout" class="list-group-item list-group-item-action">Đăng xuất</a>
                    </div>
                  </div>

                  <div class="col-12 col-md-9">

                    <div class="col-md-6 border rounded" style="background-color: white;">
                      <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Thông tin tài khoản</h4>
                        </div>
                        <h5>Họ tên : <%= currentUser.fullName %></h5>
                        <h5>Email : <%= currentUser.email %></h5>
                        <h5>Quyền truy cập : <strong><%= currentUser.role %></strong></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <%- include('../_partials/footer') %>

      </div>
      <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <%- include('../_partials/scripts')%>

</body>

</html>